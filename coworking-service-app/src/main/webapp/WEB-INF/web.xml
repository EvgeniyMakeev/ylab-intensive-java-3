<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web
     Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Registration</display-name>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>dev.makeev.coworking_service_app.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/api/v1/registration</url-pattern>
    </servlet-mapping>

    <display-name>Bookings</display-name>

    <servlet>
        <servlet-name>BookingsServlet</servlet-name>
        <servlet-class>dev.makeev.coworking_service_app.servlet.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingsServlet</servlet-name>
        <url-pattern>/api/v1/Bookings</url-pattern>
    </servlet-mapping>

    <display-name>Spaces</display-name>

    <servlet>
        <servlet-name>SpaceServlet</servlet-name>
        <servlet-class>dev.makeev.coworking_service_app.servlet.SpaceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpaceServlet</servlet-name>
        <url-pattern>/api/v1/spaces</url-pattern>
    </servlet-mapping>

    <display-name>Log</display-name>

    <servlet>
        <servlet-name>LogServlet</servlet-name>
        <servlet-class>dev.makeev.coworking_service_app.servlet.LogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogServlet</servlet-name>
        <url-pattern>/api/v1/log</url-pattern>
    </servlet-mapping>
</web-app>